<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bitbytebitcreations.studyguide">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"

        >
        <activity android:name=".MainActivity"
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".GreatSites.SitesActivity"
                  android:configChanges="orientation|screenSize"/>
        <activity android:name=".Definitions.DefinitionsActivity"
                  android:configChanges="orientation|screenSize"/>
        <activity android:name=".FlashCards.Flash_Activity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".Settings.Settings_Activity"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>