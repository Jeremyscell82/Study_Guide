<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--REMOVAL OF ACTIONBAR-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--TOOLBAR OVERLAYTHEME -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- CARDVIEW BODY -->
    <style name="font_blk_lrg_caps">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">12pt</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <!-- TOOLBAR FONT -->
    <style name="font_wht_med_caps">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">8pt</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="font_definition">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:textSize">8pt</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <!-- SETTINGS FONT -->
    <style name="font_settings">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:textSize">12pt</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>


</resources>
